<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recCardUsers"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:elevation="2dp"
        tools:ignore="MissingConstraints">
    <ImageView
        android:id="@+id/listImageUsers"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/backgroung_oval"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true"
        android:src="@drawable/icon_person"
        tools:ignore="MissingClass" />


        <TextView
            android:id="@+id/listNameUsers"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/listImageUsers"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/listImageUsers"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/listEmailUsers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/listImageUsers"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="30dp"
            android:textColor="@color/dark_grey"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>